@require "../colours.styl"

.header_text {
  margin-left 0
  margin-right 0
  margin-bottom: 5px;
  margin-top 0;
  padding-top 10px
  color tilliumn-silver
}
.menu_container {
  background-color: light-grey
  height: 100%
  width 100%
}



.header_bar_container {
  background-color light-grey
  border-bottom: 4px solid cadetblue;
  margin 0
  display: flex
  opacity 1
  padding 0
  flex-direction column
  justify-content space-between
  width 100%
  //position: fixed;
  z-index 1000 // Rediculusly high because bootstrap

  .head_bar_upper {
    
    padding-left 30px
    padding-right 30px  
    
  }
  .header_bar_inner {
    display flex
    flex-direction row
    justify-content space-between
    position relative

    height 100%
    padding-bottom 3px
    

  }
}

.header_btn_row {
  transform: translateY(+50%)
}

.header_btn:active, .header_btn:focus {
  outline: 0;
  border: none;
  -moz-outline-style: none;
}

.header_btn {
  text-decoration: none;
  height 100%
  position relative
  background none
  border none
  margin 0 8px 0 8px
  color seline-smoke
  border-radius 3px
  background-color transparent
}
.header_btn:hover {
  //background dark-violet
  border-radius 5px
  color light-placid-blue
  text-decoration: none
  transform scale(1.1)
}

.header_btn:after {
  display block
  content ' '
  border-bottom 3px solid light-placid-blue
  transform scaleX(0)
  transition transform 250ms ease-in-out
}
.header_btn:hover:after {
  transform scaleX(1)
}


.menu_btn {
  color black
}




